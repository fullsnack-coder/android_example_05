<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.SolicitarPrestamoActivity">
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Prestamos disponibles"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_md" />
        <TextView
            android:textAlignment="center"
            android:text="Puede solicitar hasta un maximo de 3 prestamos"
            android:textSize="@dimen/text_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linea_credito_contenedor"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Linea de credito disponible: "
                android:textSize="@dimen/text_body"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_sm"
                />
            <TextView
                android:layout_marginStart="@dimen/margin_sm"
                android:id="@+id/tv_linea_credito"
                android:layout_width="0dp"
                android:textSize="@dimen/text_body"
                android:textAlignment="center"
                android:background="@color/black"
                android:textColor="@color/white"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedor_prestamos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/prestamo_item_contenedor"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/prestamo_item_info"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:text="Prestamo #1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Monto: 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="12dp"
                        android:text="Aun no registrado"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:textStyle="bold"
                    android:text="Solicitar"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>